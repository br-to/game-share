<!DOCTYPE html>
<html>
  <head>
    <title>GameShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar  navbar-expand-lg navbar-dark bg-warning">
    <div class="container" >
      <div class="navbar-header">
        <%= link_to "game share", root_path, class: "navbar-brand" %>
      </div> 
    <% if logged_in? %>
      <ul class="nav navbar-nav navbar-right" >
        <li class="nav-item"><%= link_to "マイページ", user_path(current_user), class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ゲーム登録", new_game_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ゲーム一覧", games_path, class: "nav-link" %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">メニュー <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", profile_path, class: "dropdown-item" %></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item" %></li>
            </ul>
        </li>
      </ul>
    <% else %>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to "新規登録", signup_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
      </ul>
    <% end %>
    </div>
  </nav>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>">
      <%= message %>
    </div>
  <% end %>
  <%= yield %>
  </body>
</html>
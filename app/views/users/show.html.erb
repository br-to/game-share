<h1>ようこそGame Shareへ！</h1>
<%= @user.name %>
<% if @user.games.any? %>
  <h3>あなたが登録したゲーム</h3>
  <% @games.each do |game| %>
    <p><%=link_to game.title, game_path(game) %></p>
    <hr>
  <% end %>
<% end %>
<% if @user.microposts.any? %>
  <h3>あなたの感想</h3>
  <% @microposts.each do |micropost| %>
    <p><%= micropost.game.title %></p>
    <%= link_to micropost.content, "/games/#{micropost.game.id}/microposts/#{micropost.id}" %>
    <%= micropost.created_at %>
    <hr>
  <% end %>
<% end %>
<%= link_to "トップへ", root_path %>
<%= link_to "ゲームを登録する", new_game_path %>



<h2><%= @game.title %></h2>
<% if current_user?(@game.user) %>
  <p><%= link_to "編集", edit_game_path(@game) %></p>
  <p><%= link_to "削除", game_path, method: :delete,  data: { confirm: "削除してもよろしいですか？" } %></p>
<% end %>
<p><%= link_to "感想・レビューを書く", new_game_review_path(@game) %></p>
<p><%= link_to "ゲーム一覧", games_path %></p>
<p><%= link_to "ネタバレ", game_reviews_path(@game) %><p>
<h3><%= @game.title %>の感想・レビュー</h3>
<% @reviews.each do |review| %>
  <h3>感想</h3>
  <p><%= link_to review.user_name, user_path(review.user) %></p>
  <%= link_to review.content, review_path(review) %>
  <p><span><%= fa_icon "heart" %></span><%= review.likes.count %></p>
  <%= review.created_at %>
  <h3>コメント一覧</h3>
  <% review.comments.each do |comment| %>
    <%= comment.user_name %>
    <%= comment.content %>
  <% end %>
  <hr>
<% end %>
<div class="col-md-4">
  <h2><%= @game.title %></h2>
  <% if current_user?(@game.user) %>
    <p><%= link_to edit_game_path(@game) do %></p>
      <span><%= fa_icon "edit", text: "ゲームタイトル編集" %></span>
    <% end %>
    <p><%= link_to game_path(@game), method: :delete,  data: { confirm: "削除してもよろしいですか？" } do %></p>
      <span><%= fa_icon "trash", text: "ゲームタイトル削除 " %></span>
    <% end %>
  <% end %>
  <p><%= link_to "感想・レビューを書く", new_game_review_path(@game), class: "btn btn-warning" %></p>
</div>
<div class="col-md-8">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "感想・レビュー", game_path(@game) %>
    </li>
    <li class="nav-item">
      <%= link_to "ネタバレ", game_reviews_path(@game) %>
    </li>
  </ul>
  <h3><%= @game.title %>の感想・レビュー</h3>
  <% @reviews.each do |review| %>
    <p><%= link_to review.user_name, user_path(review.user) %></p>
    <%= link_to review.content, review_path(review) %>
    <p><span><%= fa_icon "heart" %></span><%= review.likes.count %></p>
    <p><%= time_ago_in_words(review.created_at) %>前に投稿されました<p>
    <h3>コメント一覧</h3>
    <% review.comments.each do |comment| %>
      <p><%= link_to comment.user_name, user_path(comment.user) %></p>
      <p><%= comment.content %></p>
      <p><%= time_ago_in_words(comment.created_at) %>前にコメントされました<p>
    <% end %>
    <hr>
  <% end %>
</div>
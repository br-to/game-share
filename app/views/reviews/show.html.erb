<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2><%=t ("title.review_show") %></h2>
      <p><%= @review.user_name %></p>
      <p><%= @review.game_title %></p>
      <%= @review.content %>
      <% if current_user?(@review.user) %>
        <%= link_to edit_review_path(@review) do %>
          <span><%= fa_icon "edit", text: t("title.edit_review") %></span>
        <% end %>
        <%= link_to review_path(@review), method: :delete, data: { confirm: t("message.delete_confirmation") } do %>
          <span><%= fa_icon "trash", text: t("link.delete_review") %></span>
        <% end %>
      <% end %>
      <% if @review.liked_by?(current_user) %>
        <p><%= link_to like_path(@like), method: :delete do %></p>
          <span><%= fa_icon "heart", text: t("link.delete_like") %></span>
        <% end %>
      <% else %>
        <p><%= link_to review_likes_path(@review), method: :post do %></p>
          <span><%= fa_icon "heart-o", text: t("link.register_like") %></span>
        <% end %>
      <% end %>
      <p><%=t ("message.likes_count") %> <%= @review.likes.count %></p>
      <% @comments.each do |comment| %>
        <p><%= comment.user_name %></p>
        <%= comment.content %>
        <% if current_user?(comment.user) %>
          <%= link_to comment_path(comment), method: :delete, data: { confirm: t("message.delete_confirmation") } do %>
            <span><%= fa_icon "trash", text: t("link.delete_comment") %></span>
          <% end %>
        <% end %>
        <hr>
      <% end %>
      <%= form_with(model: [@review, @comment], local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <p><%= f.text_field :content, placeholder: t("title.register_comment"), class: "form-control" %></p>
        <p><%= f.submit t("title.comment"), class: "btn btn-warning" %></p>
      <% end %>
      <%= link_to t("link.back_review_index"), game_path(@review.game) %>
    </div>
  </div>
</div>      